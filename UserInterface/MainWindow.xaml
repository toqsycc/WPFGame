<Window x:Class="UserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">
    <Window.Resources>
        <Style x:Key="InputBoxStyle" TargetType="{x:Type TextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="15"/>
                    <!-- drawing a shadow of border -->
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="8" BlurRadius="5.5" Direction="315" Color="Black" Opacity="0.85"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
            <!-- idk how triggers should work, smth like events but without handlers? -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#62EE17"/>
                </Trigger>
            </Style.Triggers>
            <!-- event handlers works but text box border color didnt change anymore -->
            <EventSetter Event="MouseEnter" Handler="InputBox_OnMouseOver"></EventSetter>
            <EventSetter Event="MouseLeave" Handler="InputBox_OnMouseLeave"></EventSetter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="1.0, 0.0">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Offset="0.4" Color="#14B4D0"/>
                            <GradientStop Offset="0.6" Color="#D01456"/>
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CaretBrush" Value="#62EE17"/>
            <!-- how to use multiple effects??? : split style into functional blocks -->
            <!-- blurring a text into the text box -->
            <Setter Property="Effect">
                <Setter.Value>
                    <BlurEffect KernelType="Gaussian" Radius="2.25"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        
    </Grid>
</Window>
